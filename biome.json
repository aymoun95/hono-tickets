{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"include": ["src/**/*.ts"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noUselessTypeConstraint": "error",
				"noForEach": "off",
				"noStaticOnlyClass": "off"
			},
			"nursery": {
				"noProcessEnv": "error"
			},
			"correctness": {
				"noUnusedImports": "error"
			}
		},
		"ignore": ["**/node_modules"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
